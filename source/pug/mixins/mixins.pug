mixin slideDescription (title, info, prefix)
  div(class=`slider-description__slide${prefix}`)
    h2.slider-description__title= title
    p.slider-description__info= info

mixin slideReview (userName, info, img, prefix)
  div(class=`slider-reviews__slide${prefix}`)
    h2.slider-reviews__user-name= userName
    p.slider-reviews__review= info
    picture
      source(media='(min-width: 1200px)'
        srcset=require('../img/' + img + '-desktop.jpg'))
      img.slider-reviews__img(src=require('../img/' + img + '.jpg') alt='Фото работы')

mixin newsItem (dataNum, month, info)
  div.news__data-container
    p.news__data= dataNum
    p.news__month= month
  p.news__review= info
